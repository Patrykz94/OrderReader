<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Application Theme Colors -->
    <SolidColorBrush x:Key="Background.Brush" Color="#e5e5e5"/>
    <LinearGradientBrush x:Key="Background.Gradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#fafafa" Offset="0.0"/>
        <GradientStop Color="#dfdfdf" Offset="1.0"/>
    </LinearGradientBrush>
    <SolidColorBrush x:Key="Background.Panel.Brush" Color="#ffffff"/>

    <!-- Panel Shadow Colors-->
    <Color x:Key="Shadow.Color">#000000</Color>

    <!-- Text Colors -->
    <SolidColorBrush x:Key="Foreground.Brush" Color="#2e2e2e"/>
    <SolidColorBrush x:Key="Foreground.Secondary.Brush" Color="#4a4a4a"/>
    <SolidColorBrush x:Key="Foreground.Placeholder.Brush" Color="#bbbbbb"/>

    <!-- Layout Colors -->
    <SolidColorBrush x:Key="FormDivider.Brush" Color="#cccccc"/>
    <LinearGradientBrush x:Key="FormDivider.Gradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="Transparent" Offset="0.0"/>
        <GradientStop Color="#cccccc" Offset="0.1"/>
        <GradientStop Color="#cccccc" Offset="0.9"/>
        <GradientStop Color="Transparent" Offset="1.0"/>
    </LinearGradientBrush>

</ResourceDictionary>