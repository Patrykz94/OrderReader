<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <FontFamily x:Key="IconFontRegular">/Fonts/#Font Awesome 6 Free Regular</FontFamily>
    <FontFamily x:Key="IconFontSolid">/Fonts/#Font Awesome 6 Free Solid</FontFamily>

    <system:Double x:Key="FontSize.Title">32</system:Double>
    <system:Double x:Key="FontSize.Large">24</system:Double>
    <system:Double x:Key="FontSize.Regular">20</system:Double>
    <system:Double x:Key="FontSize.Small">16</system:Double>

    <Style TargetType="{x:Type Control}" x:Key="BaseStyle">
        <Setter Property="FontSize" Value="{StaticResource FontSize.Regular}"/>
    </Style>

    <Style TargetType="{x:Type TextBlock}" x:Key="BaseTextBlockStyle">
        <Setter Property="FontSize" Value="{StaticResource FontSize.Regular}"/>
    </Style>

    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource BaseStyle}"/>
    <Style TargetType="{x:Type Label}" BasedOn="{StaticResource BaseStyle}"/>
    <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource BaseStyle}"/>
    <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource BaseTextBlockStyle}"/>
    <Style TargetType="{x:Type ListView}" BasedOn="{StaticResource BaseStyle}"/>

    <!-- Navigation icons -->
    <system:String x:Key="IconNavOrders">&#xf328;</system:String>
    <system:String x:Key="IconNavCustomers">&#xf509;</system:String>
    <system:String x:Key="IconNavSettings">&#xf013;</system:String>
    <system:String x:Key="IconNavExit">&#xf2f5;</system:String>
    
    <!-- File/Folder Icons -->
    <system:String x:Key="IconPdf">&#xf1c1;</system:String>
    <system:String x:Key="IconCsv">&#xf6dd;</system:String>
    <system:String x:Key="IconExcel">&#xf1c3;</system:String>
    <system:String x:Key="IconFolderClosed">&#xf07b;</system:String>
    <system:String x:Key="IconFolderOpen">&#xf07c;</system:String>
    <system:String x:Key="IconExport">&#xf56e;</system:String>
    <system:String x:Key="IconPrint">&#xf02f;</system:String>

    <!-- Other Icons -->
    <system:String x:Key="IconCaretDown">&#xf0d7;</system:String>
    <system:String x:Key="IconCheckMark">&#xf00c;</system:String>
    <system:String x:Key="IconReload">&#xf2f1;</system:String>
    <system:String x:Key="IconDelete">&#xf2ed;</system:String>
    <system:String x:Key="IconClose">&#xf00d;</system:String>
    <system:String x:Key="IconCloud">&#xf0c2;</system:String>
    <system:String x:Key="IconDownload">&#xf019;</system:String>
    <system:String x:Key="IconCalendar">&#xf783;</system:String>
    <system:String x:Key="IconStore">&#xf54e;</system:String>

</ResourceDictionary>