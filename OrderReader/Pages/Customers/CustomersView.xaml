<UserControl x:Class="OrderReader.Pages.Customers.CustomersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:customers="clr-namespace:OrderReader.Pages.Customers"
             d:DataContext="{d:DesignInstance Type=customers:CustomersViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border Background="{DynamicResource Background.Panel.Brush}" Margin="20 20 20 0" Padding="5" CornerRadius="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition MinWidth="200"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition MinWidth="200"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right"
                           Text="Profile:" FontSize="{StaticResource FontSize.Large}" FontWeight="Medium"/>
                <ComboBox Grid.Column="2" x:Name="CustomerProfiles">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                
                <TextBlock Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Right"
                           Text="Customers:" FontSize="{StaticResource FontSize.Large}" FontWeight="Medium"/>
                <ComboBox Grid.Column="5"
                          ItemsSource="{Binding Customers, Mode=TwoWay}"
                          SelectedItem="{Binding SelectedCustomer, Mode=TwoWay}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                
                <Button Grid.Column="6" x:Name="LoadCustomerData"
                        Style="{StaticResource AltButton}" Content="{StaticResource IconReload}"
                        FontFamily="{StaticResource IconFontSolid}" Padding="10"/>
            </Grid>
            
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="0" Color="{DynamicResource Shadow.Color}" Opacity="0.1"/>
            </Border.Effect>
        </Border>

        <TabControl Margin="20" Grid.Row="1">
            
            <!-- Profile Section -->
            <TabItem Header="Profile">
                <StackPanel>
                    <TextBlock Text="Customer Profile Information" Style="{DynamicResource HeaderText}"/>
                    <TextBlock Text="View and manage information about customer profiles" Margin="5 -5 5 5"
                               HorizontalAlignment="Center" FontSize="{StaticResource FontSize.Small}"/>

                    <Border Style="{DynamicResource Divider}" Margin="0 5 0 15"/>

                    <!-- Customer Details -->
                    <TextBlock Text="Profile Details" FontSize="{StaticResource FontSize.Large}"/>
                    <TextBlock FontSize="{StaticResource FontSize.Small}" TextWrapping="WrapWithOverflow" Margin="5 10 5 10">
                        Details about this customer profile that are used to identify it on order files and translate it to the exported CSV/PDF files.
                    </TextBlock>
                    <UniformGrid Columns="2">

                        <StackPanel>
                            <Label Content="Display Name"/>
                            <TextBox Text="{Binding CustomerProfileToEdit.Name}" Tag="Display Name"
                                     Height="{Binding ActualHeight, ElementName=UpdateCustomerProfile}"/>
                        </StackPanel>
                        
                        <StackPanel>
                            <Label Content="Order Name"/>
                            <TextBox Text="{Binding CustomerProfileToEdit.Identifier}" Tag="Order Name"
                                     Height="{Binding ActualHeight, ElementName=UpdateCustomerProfile}"/>
                        </StackPanel>
                        
                        <StackPanel>
                            <Label Content=""/>
                            <Button x:Name="UpdateCustomerProfile" Content="Update Customer"/>
                        </StackPanel>

                    </UniformGrid>

                    <Border Style="{DynamicResource Divider}"/>

                    <!-- Other Info -->
                    <TextBlock Text="Other Information" FontSize="{StaticResource FontSize.Large}"/>
                    <TextBlock FontSize="{StaticResource FontSize.Small}" TextWrapping="WrapWithOverflow" Margin="5 10 5 10">
                        Other information about the selected customer profile.
                    </TextBlock>
                    <UniformGrid Columns="2">

                        <StackPanel>
                            <Label Content="Number of customers"/>
                            <TextBlock Text="{Binding SelectedCustomerProfile.Customers.Count}" FontWeight="Medium"/>
                        </StackPanel>

                        <StackPanel>
                            <Label Content="Number of products"/>
                            <TextBlock Text="{Binding SelectedCustomerProfile.Products.Count}" FontWeight="Medium"/>
                        </StackPanel>

                    </UniformGrid>
                </StackPanel>
            </TabItem>
            
            <!-- Customers Section -->
            <TabItem Header="Customers">
                <StackPanel>
                    <TextBlock Style="{DynamicResource HeaderText}">
                        <Run Text="Customers for"/>
                        <Run Text="{Binding SelectedCustomerProfile.Name}"/>
                        <Run Text="Profile"/>
                    </TextBlock>
                    <TextBlock Text="Add, edit or remove customers from a profile" Margin="5 -5 5 5"
                               HorizontalAlignment="Center" FontSize="{StaticResource FontSize.Small}"/>

                    <Border Style="{DynamicResource Divider}" Margin="0 5 0 15"/>

                    <!-- Customer Details -->
                    <TextBlock Text="Edit/Remove Selected Customer" FontSize="{StaticResource FontSize.Large}"/>
                    <TextBlock FontSize="{StaticResource FontSize.Small}" TextWrapping="WrapWithOverflow" Margin="5 10 5 10">
                        Select a customer from the list to edit the details or remove it.
                    </TextBlock>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" x:Name="CustomerEditor">
                            <Label Content="Display Name"/>
                            <TextBox Text="{Binding SelectedCustomer.Name}" Tag="Display Name"
                                     IsEnabled="{Binding HasSelectedCustomer}"/>
                            <Label Content="CSV Name"/>
                            <TextBox Text="{Binding SelectedCustomer.CsvName}" Tag="CSV Name"
                                     IsEnabled="{Binding HasSelectedCustomer}"/>
                            <Label Content="Order Name"/>
                            <TextBox Text="{Binding SelectedCustomer.OrderName}" Tag="Order Name"
                                     IsEnabled="{Binding HasSelectedCustomer}"/>
                            <Button x:Name="UpdateCustomer" Content="Update Customer"/>
                        </StackPanel>

                        <Grid Grid.Column="1" Height="{Binding ActualHeight, ElementName=CustomerEditor}">
                            <ListBox x:Name="Customers">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding Name}" Grid.Column="0"/>
                                            <Button Command="{Binding DataContext.DeleteCustomerCommand, RelativeSource={RelativeSource AncestorType={x:Type ListBox}}}"
                                                    Style="{DynamicResource ListBoxDeleteButton}" Grid.Column="1"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </Grid>

                    <Border Style="{DynamicResource Divider}"/>

                    <!-- Add Customer -->
                    <TextBlock Text="Add New Customer" FontSize="{StaticResource FontSize.Large}"/>
                    <TextBlock FontSize="{StaticResource FontSize.Small}" TextWrapping="WrapWithOverflow" Margin="5 10 5 10">
                        Enter details of a new customer, to add it to the selected profile.
                    </TextBlock>
                    <UniformGrid Columns="2">

                        <StackPanel>
                            <Label Content="Display Name"/>
                            <TextBox Text="{Binding NewCustomer.Name}" Tag="Display Name"
                                     Height="{Binding ActualHeight, ElementName=AddCustomer}"/>
                        </StackPanel>

                        <StackPanel>
                            <Label Content="CSV Name"/>
                            <TextBox Text="{Binding NewCustomer.CsvName}" Tag="CSV Name"
                                     Height="{Binding ActualHeight, ElementName=AddCustomer}"/>
                        </StackPanel>

                        <StackPanel>
                            <Label Content="Order Name"/>
                            <TextBox Text="{Binding NewCustomer.OrderName}" Tag="Order Name"
                                     Height="{Binding ActualHeight, ElementName=AddCustomer}"/>
                        </StackPanel>

                        <StackPanel>
                            <Label Content=""/>
                            <Button x:Name="AddCustomer" Content="Add Customer"/>
                        </StackPanel>

                    </UniformGrid>
                </StackPanel>
            </TabItem>
            
            <!-- Depot Section -->
            <TabItem Header="Depots">
                <StackPanel>
                    <TextBlock Style="{DynamicResource HeaderText}">
                        <Run Text="Depots for"/>
                        <Run Text="{Binding SelectedCustomer.Name}"/>
                    </TextBlock>
                    <TextBlock Text="Add, edit or remove depots from a customer" Margin="5 -5 5 5"
                               HorizontalAlignment="Center" FontSize="{StaticResource FontSize.Small}"/>

                    <Border Style="{DynamicResource Divider}" Margin="0 5 0 15"/>

                    <!-- Depot Details -->
                    <TextBlock Text="Edit/Remove Selected Depot" FontSize="{StaticResource FontSize.Large}"/>
                    <TextBlock FontSize="{StaticResource FontSize.Small}" TextWrapping="WrapWithOverflow" Margin="5 10 5 10">
                        Select a depot from the list to edit the details or remove it.
                    </TextBlock>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" x:Name="DepotEditor">
                            <Label Content="Display Name"/>
                            <TextBox Text="{Binding SelectedDepot.Name}" Tag="Display Name"
                                     IsEnabled="{Binding HasSelectedDepot}"/>
                            <Label Content="CSV Name"/>
                            <TextBox Text="{Binding SelectedDepot.CsvName}" Tag="CSV Name"
                                     IsEnabled="{Binding HasSelectedDepot}"/>
                            <Label Content="Order Name"/>
                            <TextBox Text="{Binding SelectedDepot.OrderName}" Tag="Order Name"
                                     IsEnabled="{Binding HasSelectedDepot}"/>
                            <Button x:Name="UpdateDepot" Content="Update Depot"/>
                        </StackPanel>

                        <Grid Grid.Column="1" Height="{Binding ActualHeight, ElementName=DepotEditor}">
                            <ListBox x:Name="Depots">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding Name}" Grid.Column="0"/>
                                            <Button Command="{Binding DataContext.DeleteDepotCommand, RelativeSource={RelativeSource AncestorType={x:Type ListBox}}}"
                                                    Style="{DynamicResource ListBoxDeleteButton}" Grid.Column="1"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </Grid>

                    <Border Style="{DynamicResource Divider}"/>

                    <!-- Add Depot -->
                    <TextBlock Text="Add New Depot" FontSize="{StaticResource FontSize.Large}"/>
                    <TextBlock FontSize="{StaticResource FontSize.Small}" TextWrapping="WrapWithOverflow" Margin="5 10 5 10">
                        Enter details of a new depot, to add it to the selected customer.
                    </TextBlock>
                    <UniformGrid Columns="2">

                        <StackPanel>
                            <Label Content="Display Name"/>
                            <TextBox Text="{Binding NewDepot.Name}" Tag="Display Name"
                                     Height="{Binding ActualHeight, ElementName=AddDepot}"/>
                        </StackPanel>

                        <StackPanel>
                            <Label Content="CSV Name"/>
                            <TextBox Text="{Binding NewDepot.CsvName}" Tag="CSV Name"
                                     Height="{Binding ActualHeight, ElementName=AddDepot}"/>
                        </StackPanel>

                        <StackPanel>
                            <Label Content="Order Name"/>
                            <TextBox Text="{Binding NewDepot.OrderName}" Tag="Order Name"
                                     Height="{Binding ActualHeight, ElementName=AddDepot}"/>
                        </StackPanel>

                        <StackPanel>
                            <Label Content=""/>
                            <Button x:Name="AddDepot" Content="Add Depot"/>
                        </StackPanel>

                    </UniformGrid>
                </StackPanel>
            </TabItem>
            
            <!-- Product Section -->
            <TabItem Header="Products">
                <StackPanel>
                    <TextBlock Style="{DynamicResource HeaderText}">
                        <Run Text="Products for"/>
                        <Run Text="{Binding SelectedCustomer.Name}"/>
                    </TextBlock>
                    <TextBlock Text="Add, edit or remove products from a customer" Margin="5 -5 5 5"
                               HorizontalAlignment="Center" FontSize="{StaticResource FontSize.Small}"/>

                    <Border Style="{DynamicResource Divider}" Margin="0 5 0 15"/>

                    <!-- Product Details -->
                    <TextBlock Text="Edit/Remove Selected Product" FontSize="{StaticResource FontSize.Large}"/>
                    <TextBlock FontSize="{StaticResource FontSize.Small}" TextWrapping="WrapWithOverflow" Margin="5 10 5 10">
                        Select a product from the list to edit the details or remove it.
                    </TextBlock>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" x:Name="ProductEditor">
                            <Label Content="Display Name"/>
                            <TextBox Text="{Binding SelectedProduct.Name}" Tag="Display Name"
                                     IsEnabled="{Binding HasSelectedProduct}"/>
                            <Label Content="CSV Name"/>
                            <TextBox Text="{Binding SelectedProduct.CsvName}" Tag="CSV Name"
                                     IsEnabled="{Binding HasSelectedProduct}"/>
                            <Label Content="Order Name"/>
                            <TextBox Text="{Binding SelectedProduct.OrderName}" Tag="Order Name"
                                     IsEnabled="{Binding HasSelectedProduct}"/>
                            <Label Content="Price"/>
                            <TextBox Text="{Binding SelectedProduct.Price}" Tag="0.00"
                                     IsEnabled="{Binding HasSelectedProduct}"/>
                            <Button x:Name="UpdateProduct" Content="Update Product"/>
                        </StackPanel>

                        <Grid Grid.Column="1" Height="{Binding ActualHeight, ElementName=ProductEditor}">
                            <ListBox x:Name="Products">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding Name}" Grid.Column="0"/>
                                            <Button Command="{Binding DataContext.DeleteProductCommand, RelativeSource={RelativeSource AncestorType={x:Type ListBox}}}"
                                                    Style="{StaticResource ListBoxDeleteButton}" Grid.Column="1"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </Grid>

                    <Border Style="{DynamicResource Divider}"/>

                    <!-- Add Product -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Add New Product" FontSize="{StaticResource FontSize.Large}"/>
                        <Button Style="{StaticResource ComboButton}"
                                Content="{StaticResource IconCopy}"
                                Tag="Copy Selected"
                                FontSize="{StaticResource FontSize.Regular}"
                                Margin="5 0" Grid.Column="1"
                                Command="{Binding CopySelectedProductCommand}"
                                IsEnabled="{Binding HasSelectedProduct}"/>
                    </Grid>
                    
                    <TextBlock FontSize="{StaticResource FontSize.Small}" TextWrapping="WrapWithOverflow" Margin="5 10 5 10">
                        Enter details of a new product, to add it to the selected customer.
                    </TextBlock>
                    <UniformGrid Columns="2">

                        <StackPanel>
                            <Label Content="Display Name"/>
                            <TextBox Text="{Binding NewProduct.Name}" Tag="Display Name"
                                     Height="{Binding ActualHeight, ElementName=AddProduct}"/>
                        </StackPanel>

                        <StackPanel>
                            <Label Content="CSV Name"/>
                            <TextBox Text="{Binding NewProduct.CsvName}" Tag="CSV Name"
                                     Height="{Binding ActualHeight, ElementName=AddProduct}"/>
                        </StackPanel>

                        <StackPanel>
                            <Label Content="Order Name"/>
                            <TextBox Text="{Binding NewProduct.OrderName}" Tag="Order Name"
                                     Height="{Binding ActualHeight, ElementName=AddProduct}"/>
                        </StackPanel>

                        <StackPanel>
                            <Label Content="Price"/>
                            <TextBox Text="{Binding NewProduct.Price}" Tag="0.00"
                                     Height="{Binding ActualHeight, ElementName=AddProduct}"/>
                        </StackPanel>

                    </UniformGrid>

                    <Button x:Name="AddProduct" Content="Add Product"/>
                </StackPanel>
            </TabItem>
            
            <TabControl.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="0" Color="{DynamicResource Shadow.Color}" Opacity="0.1"/>
            </TabControl.Effect>
        </TabControl>
    </Grid>

</UserControl>
 